        <% } %>

        <% if(typeof metas.url != 'undefined'){ %>
            <meta property="og:url" content="<%= metas.url %>" />
        <% } %>

        <% if(typeof metas.description != 'undefined'){ %>
            <meta name="description" content="<%=metas.description.substr(0,159) %>" />
            <meta property="og:description" content="<%=metas.description.substr(0,159) %>" />
        <% } %>
        <% if(typeof metas.keywords != 'undefined'){ %>
            <meta name="keywords" content="<%=metas.keywords%>" />
        <% } %>
